<p id="notice"><%= notice %></p>


<div class="card ">
  <div class="card-body">
  <h1 class="display-1">Productos</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Clave</th>
        <th>Cantidad</th>
        <th>Costo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.name %></td>
          <td><%= sale.price %></td>
          <td><%= sale.key %></td>
          <td><%= sale.quantity %></td>
          <td><%= sale.costo %></td>
          <td><%= link_to 'Editar', edit_sale_path(sale), class: "btn btn-warning", style: "color: white" %></td>
          <td><%= link_to 'Eliminar', sale, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: white"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo producto', new_sale_path , class: "btn btn-success", style: "color: white"%>

  </div>
</div>
