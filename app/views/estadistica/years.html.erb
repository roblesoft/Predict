<br>
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1 class="display-4"style="font-weight:bold">Graficas de los años</h1>
        <p style="color: gray; ">Siga el trayecto de sus producto</p>
        <table class="table">
          <thead>
            <tr>
              <th>Año</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @years.each do |year| %>
              <tr>
                <td><%= year.name %></td>
                
                <td><%= link_to('ver graficas',{controller: '/estadistica', action: :charts, id: year.id}, class: "btn btn-success") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
