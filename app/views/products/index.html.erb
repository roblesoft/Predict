<p id="notice"><%= notice %></p>


<div class="card ">
  <div class="card-body">
  <h1 class="display-1">Productos</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Clave</th>
        <th>Cantidad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.key %></td>
          <td><%= product.quantity %></td>
          <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-warning", style: "color: white" %></td>
          <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: white"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo producto', new_product_path , class: "btn btn-success", style: "color: white"%>

  </div>
</div>