<br>
<div class="card">
  <div class="card-body">
    <p id="notice"><%= notice %></p>
    <h1 class="display-1"><%= @month.name %> <%= @month.year %></h1>
        <table class="table">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Clave</th>
              <th>Cantidad</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= product.key %></td>
                <td><%= product.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


    <%= link_to "nuevo", new_product_path, remote: true, class:"btn btn-success" %>
  </div>
</div>

